{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM"],
		"moduleResolution": "node",
		"module": "es2020",
    "noImplicitAny": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		//"strict": true,
		"target": "es2020"
	}
}

//commented out "strict" and added "noImplicitAny" to get rid
//of no specified type errors.
